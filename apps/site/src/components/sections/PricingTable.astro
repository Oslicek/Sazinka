---
import { getTranslation, type Locale } from '../../i18n/utils';

interface Props {
  locale: Locale;
}

const { locale } = Astro.props;
const t = (key: string) => getTranslation(locale, key);

const tiers = [
  {
    key: 'free',
    name: t('pricing.free.name'),
    description: t('pricing.free.description'),
    price: t('pricing.free.price'),
    limit: t('pricing.free.limit'),
    cta: t('pricing.free.cta'),
    featured: false,
  },
  {
    key: 'pro',
    name: t('pricing.pro.name'),
    description: t('pricing.pro.description'),
    price: t('pricing.pro.price'),
    limit: t('pricing.pro.limit'),
    cta: t('pricing.pro.cta'),
    featured: true,
  },
];
---

<section class="pricingSection">
  <div class="container">
    <h1 class="pageTitle">{t('pricing.title')}</h1>
    <div class="pricingGrid">
      {tiers.map((tier) => (
        <div class:list={['pricingCard', { featured: tier.featured }]}>
          <h2 class="tierName">{tier.name}</h2>
          <p class="tierDescription">{tier.description}</p>
          <p class="tierPrice">{tier.price}</p>
          <p class="tierLimit">{tier.limit}</p>
          <a
            href="https://app.ariadline.com"
            class:list={['tierCta', { ctaFeatured: tier.featured }]}
          >
            {tier.cta}
          </a>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .pricingSection {
    padding: 4rem 0;
  }

  .pageTitle {
    font-family: var(--font-heading);
    font-size: 2.5rem;
    font-weight: 800;
    text-align: center;
    margin-bottom: 3rem;
    color: var(--color-text);
  }

  .pricingGrid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
    max-width: 800px;
    margin: 0 auto;
  }

  .pricingCard {
    background-color: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: 2.5rem;
    text-align: center;
  }

  .pricingCard.featured {
    border-color: var(--color-primary);
    box-shadow: 0 0 0 2px var(--color-primary), var(--shadow-lg);
    position: relative;
  }

  .tierName {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: var(--color-text);
  }

  .tierDescription {
    color: var(--color-text-secondary);
    font-size: 0.9375rem;
    margin-bottom: 1.5rem;
  }

  .tierPrice {
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 800;
    color: var(--color-text);
    margin-bottom: 0.5rem;
  }

  .tierLimit {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    margin-bottom: 2rem;
  }

  .tierCta {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 2rem;
    font-size: 1rem;
    font-weight: 600;
    border-radius: var(--radius-md);
    text-decoration: none;
    transition: all 0.15s ease;
    background-color: var(--color-bg-secondary);
    color: var(--color-text);
    border: 1px solid var(--color-border);
  }

  .tierCta:hover {
    background-color: var(--color-border);
    text-decoration: none;
  }

  .tierCta.ctaFeatured {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  .tierCta.ctaFeatured:hover {
    background-color: var(--color-primary-dark);
  }

  @media (min-width: 768px) {
    .pricingGrid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
</style>

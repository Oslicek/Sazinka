---
interface Props {
  title: string;
  intro: string;
  points: string[];
}

const { title, intro, points } = Astro.props;
---

<section class="legal">
  <div class="container legalInner">
    <h1>{title}</h1>
    <p class="intro">{intro}</p>
    <ul>
      {points.map((point) => (
        <li>{point}</li>
      ))}
    </ul>
  </div>
</section>

<style>
  .legal {
    padding: 4rem 0;
  }

  .legalInner {
    max-width: 900px;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.25rem;
    margin-bottom: 1rem;
  }

  .intro {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
  }

  ul {
    padding-left: 1.25rem;
    line-height: 1.7;
  }

  li {
    margin-bottom: 0.75rem;
  }
</style>

---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/layout/Header.astro';
import Footer from '../../../components/layout/Footer.astro';
import LegalContent from '../../../components/sections/LegalContent.astro';

const locale = 'cs';
---

<Layout title="Obchodní podmínky | Ariadline" description="Obchodní podmínky služby Ariadline." locale={locale} path="/cs/legal/terms">
  <Header slot="header" locale={locale} currentPath="/cs/legal/terms" />
  <LegalContent
    title="Obchodní podmínky"
    intro="Používáním Ariadline souhlasíte s těmito podmínkami."
    points={[
      'Ariadline je poskytován jako předplacená SaaS služba.',
      'Uživatel odpovídá za ochranu svých přihlašovacích údajů.',
      'Zneužití služby nebo protiprávní použití je zakázáno.',
      'Podmínky můžeme aktualizovat; zásadní změny komunikujeme předem.',
    ]}
  />
  <Footer slot="footer" locale={locale} />
</Layout>

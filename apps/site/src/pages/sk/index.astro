---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import Hero from '../../components/sections/Hero.astro';
import ProblemSolution from '../../components/sections/ProblemSolution.astro';
import FeaturesOverview from '../../components/sections/FeaturesOverview.astro';
import CTASection from '../../components/sections/CTASection.astro';
import { getTranslation } from '../../i18n/utils';

const locale = 'sk';
const t = (key: string) => getTranslation(locale, key);
---

<Layout
  title={t('meta.title')}
  description={t('meta.description')}
  locale={locale}
  path="/sk/"
>
  <Header slot="header" locale={locale} currentPath="/sk/" />
  <Hero locale={locale} />
  <ProblemSolution locale={locale} />
  <FeaturesOverview locale={locale} />
  <CTASection locale={locale} />
  <Footer slot="footer" locale={locale} />
</Layout>

---
import Layout from '../../../layouts/Layout.astro';
import Header from '../../../components/layout/Header.astro';
import Footer from '../../../components/layout/Footer.astro';
import LegalContent from '../../../components/sections/LegalContent.astro';

const locale = 'sk';
---

<Layout title="Zásady cookies | Ariadline" description="Zásady používania cookies na webe Ariadline." locale={locale} path="/sk/legal/cookies">
  <Header slot="header" locale={locale} currentPath="/sk/legal/cookies" />
  <LegalContent
    title="Zásady cookies"
    intro="Marketingový web Ariadline nepoužíva sledovacie cookies."
    points={[
      'Analytika je riešená cez Umami Cloud v režime bez cookies.',
      'Základné technické údaje môžu byť spracované pre bezpečnosť a dostupnosť.',
      'Ak sa zásady zmenia, túto stránku aktualizujeme.',
    ]}
  />
  <Footer slot="footer" locale={locale} />
</Layout>
